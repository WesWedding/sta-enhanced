<div>
<fieldset>
    <legend>{{ localize "sta-enhanced.reputation-config.title"}}</legend>
    <div>
      <label>{{ localize "sta-enhanced.reputation.influences.positive" }}
        <input name="positive" type="number" min="0" placeholder="0">
      </label>
      <label>{{ localize "sta-enhanced.reputation.influences.negative" }}
        <input name="negative" type="number" min="0" placeholder="0">
      </label>
    </div>
  </fieldset>
  <footer class="form-footer">
    <button type="submit" class="btn">
      <i class="fa-solid fa-dice-d20" inert></i>
      <label inert>{{localize 'sta-enhanced.reputation.apps.roll-action'}}</label>
    </button>
    {{#each buttons as |button|}}
      <button type="{{button.type}}" {{#if button.name}}name="{{button.name}}"{{/if}} class="{{button.cssClass}}"
              {{#if button.action}}data-action="{{button.action}}"{{/if}} {{#if button.disabled}}disabled{{/if}}>
        {{#if button.icon}}<i class="{{button.icon}}" inert></i>{{/if}}
        {{#if button.label}}<label inert>{{localize button.label}}</label>{{/if}}
      </button>
    {{/each}}
  </footer>
</div>
