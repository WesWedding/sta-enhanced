<div class="tab reputation" data-tab="reputation" data-group="primary-tabs">
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item1-connect-block noradius"></div>
      <div class="lcars-item-general-block"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column">
      <div class="row">
        <div class="column title">
          {{localize 'sta.actor.character.discipline.reputation'}}
        </div>
      </div>
      <div class="section reputation">
        <div class="title">
          {{localize 'sta.actor.character.reputation'}}
        </div>
        <div class="track">
          <input type="hidden" id="total-rep" name="system.reputation" value="{{system.reputation}}" data-dtype="Number" />
          <div id="bar-rep-renderer" class=" bar"></div>
        </div>
        {{#if sta-enhanced.new1ERep}}
          <div class="row">
            <div class="column fields">
              <div class="row labels">
                <div class="column title">{{sta-enhanced.new1ERep.labels.positive}}</div>
                <div class="column title">{{sta-enhanced.new1ERep.labels.negative}}</div>
              </div>
            </div>
          </div>
        <div class="row">
          <div class="column">
            <input name="system.acclaim" class="text-entry" type="text" value="{{system.acclaim}}" placeholder="{{localize 'sta-enhanced.reputation.positive.title.generic'}}" />
          </div>
          <div class="column">
            <input name="system.reprimand" class="text-entry" type="text" value="{{system.reprimand}}" placeholder="{{localize 'sta-enhanced.reputation.negative.title.generic'}}" />
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
