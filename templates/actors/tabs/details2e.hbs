<div class="tab" data-tab="details" data-group="primary-tabs">
  {{!-- Inputs Section --}}
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item-general-block"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column" style="width:100%">
      <div class="row">
        <div class="column fields">
          <div class="row labels">
            <div class="column title" style="width:20%">
              {{localize 'sta.actor.character.species'}}
            </div>
            <div class="column title" style="width:35%">
              {{localize 'sta.actor.character.assignment'}}
            </div>
            <div class="column title" style="width:35%">
              {{localize 'sta.actor.character.pronouns'}}
            </div>
          </div>
          <div class="row inputs">
            <div class="column" style="width:20%">
              <input name="system.species" class="text-entry" type="text" value="{{system.species}}" placeholder="{{localize 'sta.actor.character.species'}}" />
            </div>
            <div class="column" style="width:35%">
              <input name="system.assignment" class="text-entry" type="text" value="{{system.assignment}}" placeholder="{{localize 'sta.actor.character.assignment'}}" />
            </div>
            <div class="column" style="width:35%">
              <input name="system.pronouns" class="text-entry" type="text" value="{{system.pronouns}}" placeholder="{{localize 'sta.actor.character.pronouns'}}" />
            </div>
          </div>
          <div class="row labels">
            <div class="column title">
              <div> {{localize 'sta.actor.character.traits'}} </div>
            </div>
            <div class="column title">
              <div> {{localize 'sta-enhanced.actor.personality'}} </div>
            </div>
          </div>
          <div class="row inputs">
            <div class="column">
              <input name="system.traits" class="text-entry" type="text" value="{{system.traits}}" placeholder="{{localize 'sta.actor.starship.traits'}}" />
            </div>
            <div class="column">
              <input name="flags.sta-enhanced.character.personality" class="text-entry" type="text" value="{{sta-enhanced.character.personality}}" placeholder="{{localize 'sta-enhanced.actor.personality'}}" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Middle sections --}}
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item1-connect-block noradius"></div>
      <div class="lcars-item1-general-block1"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column left-column">
      <div class="section talents">
        <div class="title">
          {{localize 'sta.item.talent.title'}}
        </div>
        <div class="header row item">
          <div class="image"></div>
          <div class="one-column-with-roll secondary-title">{{localize 'sta.item.genericitem.name'}}</div>
          <a class="control create" title="Create item" data-type="talent"><i class="fas fa-plus"></i></a>
        </div>
        {{#each items as |item id|}}
          {{#if (eq item.type "talent")}}
            <li class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
              <div class="image"><img class="chat" src="{{item.img}}" title="{{item.name}}"/></div>
              <div class="one-column-no-roll list-entry talent-tooltip-clickable" id="talent-tooltip-clickable-{{item.id}}" data-talent-name="{{item.name}}">{{item.name}}</div>
              <div class="control">
                <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            <li class="row entry talent-tooltip-container hide" id="talent-tooltip-container-{{item.id}}">
              <div class="list-entry talent-tooltip-text" id="talent-tooltip-text-{{item.id}}">{{item.system.description}}</div>
            </li>
          {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="column center-column">
      <div class="section values">
        <div class="title">
          {{localize 'sta.actor.value.title'}}
        </div>
        <div class="header row item">
          <div class="image"></div>
          <div class="value-used">{{localize 'sta.actor.value.used'}}</div>
          <div class="one-column-with-roll">{{localize 'sta.item.genericitem.name'}}</div>
          <a class="control create" title="Create item" data-type="value"><i class="fas fa-plus"></i></a>
        </div>
        {{#each items as |item id|}}
          {{#if (eq item.type "value")}}
            <li class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
              <div class="image"><img class="chat" src="{{item.img}}" title="{{item.name}}"/></div>
              <a class="value-used control toggle"><i class="fas fa-toggle-{{#if (eq item.system.used true)}}on{{else}}off{{/if}}"></i></a>
              <h4 class="one-column-with-roll list-entry {{#if (eq item.system.used true)}}strike-through{{/if}}">{{name}}</h4>
              <div class="control">
                <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="column right-column">
      <div class="section focuses">
        <div class="title">
          {{localize 'sta.actor.focus.title'}}
        </div>
        <div class="header row item">
          <div class="image"></div>
          <div class="one-column-with-roll">{{localize 'sta.item.genericitem.name'}}</div>
          <a class="control create" title="Create item" data-type="focus"><i class="fas fa-plus"></i></a>
        </div>
        {{#each items as |item id|}}
          {{#if (eq item.type "focus")}}
            <li class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
              <div class="image"><img class="chat" src="{{item.img}}" title="{{item.name}}"/></div>
              <h4 class="one-column-with-roll list-entry focus-tooltip-clickable" id="focus-tooltip-clickable-{{item.id}}">{{item.name}}</h4>
              <div class="control">
                <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            <li class="row entry focus-tooltip-container hide" id="focus-tooltip-container-{{item.id}}">
              <div class="list-entry focus-tooltip-text" id="focus-tooltip-text-{{item.id}}">{{item.system.description}}</div>
            </li>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
  {{!-- Bottom Section --}}
  <div class="row">
    {{!-- Belongings --}}
    <div class="lcars-column">
      <div class="lcars-item1-connect-block noradius"></div>
      <div class="lcars-item-general-block"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column">
      <div class="section belongings">
        <div class="title">
          {{localize 'sta.actor.belonging.title'}}
        </div>
        <div class="row">
          <div class="column wide left">
            {{!-- Weapons --}}
            <div class="lcars-header row item">
              <div class="image"></div>
              <div class="two-column-with-roll-primary">{{localize 'sta.actor.belonging.weapon.title'}}</div>
              <div class="two-column-with-roll-secondary">{{localize 'sta.actor.belonging.weapon.dmg'}}</div>
              <a class="control create" title="Create item" data-type="characterweapon"><i class="fas fa-plus"></i></a>
            </div>
            {{#each items as |item type id|}}
              {{> "sta-enhanced.parts.character-items-weapon" idx=@index item=item type=type id=id}}
            {{/each}}
          </div>
          <div class="column wide right">
            <div class="header row item">
              <div class="image"></div>
              <div class="two-column-with-roll-primary">{{localize 'sta.actor.belonging.armor.title'}}</div>
              <div class="two-column-with-roll-secondary">{{localize 'sta.actor.belonging.armor.protect'}}</div>
              <a class="control create" title="Create item" data-type="armor"><i class="fas fa-plus"></i></a>
            </div>
            {{#each items as |item type id|}}
              {{#if (eq item.type "armor")}}
                <li id="armor-{{item.id}}" class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
                  <div class="image"><img class="chat" src="{{item.img}}" title="{{item.name}}"/>
                  </div>
                  <h4 class="two-column-with-roll-primary list-entry">{{item.name}}</h4>
                  <h4 id="protectval-armor-{{item.id}}" class="two-column-with-roll-secondary list-entry">{{item.system.protection}}</h4>
                  <div class="control">
                    <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                  </div>
                </li>
              {{/if}}
            {{/each}}
            {{!-- Other --}}
            <div class="lcars-header row item">
              <div class="image"></div>
              <div class="two-column-with-roll-primary">{{localize 'sta.actor.belonging.other.title'}}</div>
              <div class="two-column-with-roll-secondary">{{localize 'sta.actor.belonging.other.qty'}}</div>
              <a class="control create" title="Create item" data-type="item"><i class="fas fa-plus"></i></a>
            </div>
            {{#each items as |item type id|}}
              {{#if (eq item.type "item")}}
                <li class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
                  <div class="image"><img class="chat" src="{{item.img}}" title="{{item.name}}"/>
                  </div>
                  <h4 class="two-column-with-roll-primary list-entry">{{item.name}}</h4>
                  <h4 class="two-column-with-roll-secondary list-entry">{{item.system.quantity}}</h4>
                  <div class="control">
                    <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                  </div>
                </li>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    {{!-- End Belongings --}}
  </div>
  {{!-- Injuries --}}
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item1-connect-block noradius"></div>
      <div class="lcars-item2-general-block1"></div>
      <div class="lcars-item2-general-block2"></div>
    </div>
    <div class="column left-column">
      <div class="section">
        <div class="title">&nbsp; </div>
        <div class="header row item">
          <div class="one-column-no-roll">&nbsp;</div>
        </div>
      </div>
    </div>
    <div class="column center-column">
      <div class="section injuries">
        <div class="title">
          {{localize 'sta.actor.injury.title'}}
        </div>
        <div class="header row item">
          <div class="one-column-no-roll">{{localize 'sta.item.genericitem.name'}}</div>
          <a class="control create" title="Create item" data-type="injury"><i class="fas fa-plus"></i></a>
        </div>
        {{#each items as |item id|}}
          {{#if (eq item.type "injury")}}
            <li class="row entry" data-item-id="{{item.id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
              <h4 class="one-column-no-roll list-entry injury-tooltip-clickable" id="injury-tooltip-clickable-{{item.id}}">{{item.name}}</h4>
              <div class="control">
                <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            <li class="row entry injury-tooltip-container hide" id="injury-tooltip-container-{{item.id}}">
              <div class="list-entry injury-tooltip-text" id="injury-tooltip-text-{{item.id}}">{{item.system.description}}</div>
            </li>
          {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="column right-column">
      <div class="section">
        <div class="title">&nbsp; </div>
        <div class="header row item">
          <div class="one-column-no-roll">&nbsp;</div>
        </div>
      </div>
    </div>
  </div>
</div>
