<div class="tab" data-tab="biography" data-group="primary-tabs">
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item1-top-block"></div>
      <div class="lcars-item1-connect-block"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column" style="width:100%">
      <div class="row">
        <div class="column title">
          <div> {{localize 'sta.actor.character.environment'}} </div>
        </div>
        <div class="column title">
          <div> {{localize 'sta.actor.character.upbringing'}} </div>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <input name="system.environment" class="text-entry" type="text" value="{{system.environment}}" placeholder="{{localize 'sta.actor.character.environment'}}" />
        </div>
        <div class="column">
          <input name="system.upbringing" class="text-entry" type="text" value="{{system.upbringing}}" placeholder="{{localize 'sta.actor.character.upbringing'}}" />
        </div>
      </div>
      <div class="section note">
        <div class="title">
          {{localize 'sta.actor.note.title'}}
        </div>
        <div class="lcars-header row item"></div>
        <div class="note">
          {{editor system.notes target="system.notes" button=true owner=owner editable=true}}
        </div>
      </div>
    </div>
  </div>
</div>