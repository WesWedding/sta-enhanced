<div class="tab biography" data-tab="biography" data-group="primary-tabs">
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item-general-block"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column" style="width:100%">
      <div class="row">
        <div class="column title">
          <div> {{localize 'sta.actor.character.environment'}} </div>
        </div>
        <div class="column title">
          <div> {{localize 'sta.actor.character.upbringing'}} </div>
        </div>
        <div class="column title">
          <div> {{localize 'sta.actor.character.careerpath'}} </div>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <input name="system.environment" class="text-entry" type="text" value="{{system.environment}}" placeholder="{{localize 'sta.actor.character.environment'}}" />
        </div>
        <div class="column">
          <input name="system.upbringing" class="text-entry" type="text" value="{{system.upbringing}}" placeholder="{{localize 'sta.actor.character.upbringing'}}" />
        </div>
        <div class="column">
          <input name="system.careerpath" class="text-entry" type="text" value="{{system.careerpath}}" placeholder="{{localize 'sta.actor.character.careerpath'}}" />
        </div>
      </div>
      <div class="row">
        <div class="column title">
          <div> {{localize 'sta.actor.character.experience'}} </div>
        </div>
        <div class="column title">
          <div> {{localize 'sta.actor.character.careerevents'}} </div>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <input name="system.experience" class="text-entry" type="text" value="{{system.experience}}" placeholder="{{localize 'sta.actor.character.experience'}}" />
        </div>
        <div class="column">
          <input name="system.careerevents" class="text-entry" type="text" value="{{system.careerevents}}" placeholder="{{localize 'sta.actor.character.careerevents'}}" />
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="lcars-column">
      <div class="lcars-item1-connect-block noradius"></div>
      <div class="lcars-item1-general-block1"></div>
      <div class="lcars-item1-general-block"></div>
    </div>
    <div class="column">
      <div class="section biography">
        <div class="title">{{localize 'sta-enhanced.actor.backstory'}}</div>
        <div class="lcars-header row item"></div>
        <div class="biography">
          {{editor sta-enhanced.character.enrichedBackstory target="flags.sta-enhanced.character.backstory" button=true editable=true engine="prosemirror"}}
        </div>
      </div>
    </div>
  </div>
</div>
